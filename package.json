{
  "name": "forge-cc",
  "version": "1.0.3",
  "description": "Forge â€” verification harness for Claude Code agents",
  "type": "module",
  "license": "MIT",
  "author": "Troy Hoffman",
  "repository": {
    "type": "git",
    "url": "https://github.com/troyhoffman/forge-cc.git"
  },
  "keywords": [
    "forge",
    "verification",
    "claude-code",
    "mcp",
    "pre-commit",
    "lint",
    "typescript"
  ],
  "engines": {
    "node": ">=18"
  },
  "main": "dist/gates/index.js",
  "exports": {
    ".": "./dist/gates/index.js",
    "./cli": "./dist/cli.js",
    "./server": "./dist/server.js"
  },
  "bin": {
